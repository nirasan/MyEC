    %tr
      %th User
      %th Name
      %th Address
      %th Zip code
      %th Phone number
      %th Price
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.user
        %td= order.name
        %td= order.address
        %td= order.zip_code
