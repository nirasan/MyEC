= simple_form_for(@order) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :address
    = f.input :zip_code
    = f.input :phone_number
    = f.input :delivery_date, collection: Order.get_deliverable_dates, include_blank: false
    = f.input :delivery_timezone, collection: Settings.delivery_timezone, include_blank: false

  .form-actions
    .row
      .col-md-offset-2.col-md-8
        = f.button :submit, class: 'btn btn-primary btn-lg btn-block'
